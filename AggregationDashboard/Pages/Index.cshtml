@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-5">
    <h1 class="mb-4 text-primary text-center">Aggregation Dashboard</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow rounded">
            <thead class="table-dark">
                <tr>
                    <th>PULocationID</th>
                    <th>Quarter</th>
                    <th>Year</th>
                    <th>Trip Count</th>
                    <th>Total Fare</th>
                    <th>Average Distance</th>
                    <th>Aggregation Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Results)
                {
                    <tr>
                        <td>@item.PULocationID</td>
                        <td>@item.Quarter</td>
                        <td>@item.Year</td>
                        <td>@item.TripCount</td>
                        <td>@item.TotalFareAmount</td>
                        <td>@item.AverageTripDistance</td>
                        <td>@item.AggregationTime.ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
